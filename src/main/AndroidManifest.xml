<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="nl.mpcjanssen.uc">
    >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="19" />
    
    <application android:name="nl.mpcjanssen.uc.UCApplication" android:icon="@drawable/ic_launcher" android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">
        <activity android:name=".UbiquitousCaptureActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
         <intent-filter>
            <category android:name="android.intent.category.DEFAULT" />
            <action android:name="nl.mpcjanssen.uc.CAPTURE" />
        </intent-filter>

        </activity>
    </application>
</manifest>
